{
	"name": "backend",
	"packageManager": "pnpm@10.14.0",
	"scripts": {
		"dev": "cross-env MODE=development tsx watch src/server.ts",
		"migrate:dev": "prisma migrate dev && prisma generate",
		"migrate:deploy": "prisma migrate dev && prisma generate && prisma migrate deploy",
		"copy:templates": "cpx src/services/mail/templates/**/*.html dist/services/mail/templates",
		"build": "tsc",
		"start": "cross-env MODE=production node dist/server.js"
	},
	"dependencies": {
		"@fastify/autoload": "^6.3.1",
		"@fastify/cookie": "^11.0.2",
		"@fastify/cors": "^11.2.0",
		"@prisma/client": "^6.19.1",
		"@trpc/server": "^11.8.1",
		"cpx": "^1.5.0",
		"cross-env": "^10.1.0",
		"dotenv": "^17.2.3",
		"fastify": "^5.6.2",
		"nodemailer": "^7.0.12",
		"openai": "^6.15.0",
		"prisma": "^6.19.1",
		"superjson": "^2.2.6",
		"zod": "^4.3.5"
	},
	"devDependencies": {
		"@types/nodemailer": "^7.0.5",
		"tsx": "^4.21.0"
	}
}
